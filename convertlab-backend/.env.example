# Application Configuration
SPRING_APPLICATION_NAME=convertlab-backend

# Server Configuration
SERVER_PORT=8080
SERVER_CONTEXT_PATH=/api

# File Upload Configuration
MAX_FILE_SIZE=5MB
MAX_REQUEST_SIZE=25MB
MAX_SWALLOW_SIZE=200MB

# Temporary File Storage Configuration
TEMP_FOLDER=temp-files
TEMP_TTL_MS=1800000
TEMP_CLEANUP_INTERVAL_MS=1800000

# CORS Configuration (comma-separated list of allowed origins)
CORS_ALLOWED_ORIGINS=https://www.easyconvertlab.com,http://localhost:4200

# Logging Configuration (Optional)
LOG_LEVEL_ROOT=info
LOG_LEVEL_APP=info
LOG_LEVEL_SPRING=info
LOG_LEVEL_PDFBOX=warn